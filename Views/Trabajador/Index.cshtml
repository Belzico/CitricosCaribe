@model IEnumerable<CitricosCaribe.Models.Trabajador>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de Trabajadores</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Departamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cargo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GradoEscolar)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sueldo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Departamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cargo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GradoEscolar)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sueldo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CI">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CI">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CI">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
